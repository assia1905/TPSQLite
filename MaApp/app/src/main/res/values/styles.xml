<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item> <!-- Couleur de fond -->
        <item name="android:textColor">@android:color/white</item> <!-- Couleur du texte -->
        <item name="android:textSize">16sp</item> <!-- Taille du texte -->
        <item name="android:padding">12dp</item> <!-- Rembourrage -->
        <item name="android:layout_marginTop">16dp</item> <!-- Marge en haut -->
    </style>
</resources>
